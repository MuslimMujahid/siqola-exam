generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EXAMINER
  EXAMINEE
}

enum MembershipStatus {
  ACTIVE
  SUSPENDED
  PENDING
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?
  fullName      String?
  phoneNumber   String?
  role          Role     @default(EXAMINEE)
  emailVerified Boolean  @default(false)
  lastLogin     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  memberships      Membership[]
  groupMembers     GroupMember[]
  invitationTokens InvitationToken[]
  createdExams     Exam[]
  examAssignments  ExamAssignment[]
  examAttempts     ExamAttempt[]

  @@map("users")
}

model Institution {
  id        String   @id @default(cuid())
  name      String
  logo      String?
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships Membership[]
  groups      Group[]
  exams       Exam[]
  tags        Tag[]

  @@map("institutions")
}

model Membership {
  id            String           @id @default(cuid())
  userId        String
  institutionId String
  status        MembershipStatus @default(ACTIVE)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  institution Institution @relation(fields: [institutionId], references: [id], onDelete: Cascade)

  @@unique([userId, institutionId])
  @@map("memberships")
}

model PendingRegistration {
  id              String   @id @default(cuid())
  email           String
  hashedPassword  String
  fullName        String
  phoneNumber     String
  institutionName String
  address         String
  otp             String
  expiresAt       DateTime
  used            Boolean  @default(false)
  createdAt       DateTime @default(now())

  @@map("pending_registrations")
}

model Group {
  id            String   @id @default(cuid())
  institutionId String
  name          String
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  institution     Institution      @relation(fields: [institutionId], references: [id], onDelete: Cascade)
  groupMembers    GroupMember[]
  examAssignments ExamAssignment[]

  @@map("groups")
}

model GroupMember {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  createdAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@map("group_members")
}

model InvitationToken {
  id            String   @id @default(cuid())
  token         String   @unique @default(cuid())
  email         String
  role          Role
  userId        String?
  institutionId String
  expiresAt     DateTime
  used          Boolean  @default(false)
  createdAt     DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("invitation_tokens")
}

enum ExamStatus {
  DRAFT
  PUBLISHED
  CLOSED
}

enum QuestionType {
  MULTIPLE_CHOICE
  ESSAY
  SHORT_ANSWER
}

enum AttemptStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

model Tag {
  id            String   @id @default(cuid())
  name          String
  institutionId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  institution Institution? @relation(fields: [institutionId], references: [id], onDelete: Cascade)
  examTags    ExamTag[]

  @@unique([name, institutionId])
  @@map("tags")
}

model Exam {
  id                String     @id @default(cuid())
  title             String
  description       String?
  instructions      String?
  duration          Int        // Duration in minutes
  passingGrade      Float
  shuffleOptions    Boolean    @default(false)
  maxAttempts       Int        @default(1)
  status            ExamStatus @default(DRAFT)
  institutionId     String
  creatorId         String
  availableFrom     DateTime?
  availableUntil    DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  institution  Institution       @relation(fields: [institutionId], references: [id], onDelete: Cascade)
  creator      User              @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  questions    Question[]
  assignments  ExamAssignment[]
  attempts     ExamAttempt[]
  examTags     ExamTag[]

  @@map("exams")
}

model ExamTag {
  id        String   @id @default(cuid())
  examId    String
  tagId     String
  createdAt DateTime @default(now())

  exam Exam @relation(fields: [examId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([examId, tagId])
  @@map("exam_tags")
}

model Question {
  id            String       @id @default(cuid())
  examId        String
  type          QuestionType
  content       Json         // Rich text content from Slate
  options       Json?        // For multiple choice: array of options
  correctAnswer Json?        // For multiple choice: correct option(s), for short answer: acceptable answers
  points        Float
  order         Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  exam    Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  answers Answer[]

  @@map("questions")
}

model ExamAssignment {
  id              String    @id @default(cuid())
  examId          String
  userId          String?
  groupId         String?
  availableFrom   DateTime?
  availableUntil  DateTime?
  createdAt       DateTime  @default(now())

  exam  Exam   @relation(fields: [examId], references: [id], onDelete: Cascade)
  user  User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group? @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([examId, userId])
  @@unique([examId, groupId])
  @@map("exam_assignments")
}

model ExamAttempt {
  id          String        @id @default(cuid())
  examId      String
  userId      String
  status      AttemptStatus @default(NOT_STARTED)
  startedAt   DateTime?
  completedAt DateTime?
  score       Float?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  exam    Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers Answer[]

  @@map("exam_attempts")
}

model Answer {
  id            String   @id @default(cuid())
  attemptId     String
  questionId    String
  answerContent Json     // User's answer
  score         Float?   // Points earned, null if not graded yet
  feedback      String?  // Manual feedback for essay questions
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  attempt  ExamAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([attemptId, questionId])
  @@map("answers")
}
